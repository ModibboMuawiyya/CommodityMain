@model IEnumerable<RateViewModel>

@{
    int sn = 1;
}

<div class="row pt-3 pb-2">
    <div class="col-sm-11">
        <h5><i class="fa fa-list-alt"></i> Valuesets</h5>
    </div>
    <div class="col-sm-1 text-right">
        <a href="@Url.Action("CreateValuesets","settings")" class="text-right process-action"><i class="fa fa-plus"></i> Create New</a>
    </div>
</div>


<div class="card">
    <div class="card-header">
        <div class="d-flex align-items-center">
            <h4 class="card-title">Add Row</h4>
            <button class="btn btn-primary btn-round ml-auto smallModalId"
                data-url="@Url.Action("UpsertCodeSystemConcepts","rate", new { csfk = Model.CodeSystemPkey})"
                data-toggle="ajax-modal" 
                data-target="#addRowModal">
                <i class="fa fa-plus"></i>
                Add Row
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="add-row" class="display table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-left">Rate ID</th>
                        <th class="text-left">Rate</th>
                        <th class="text-left">Rate Type</th>
                        <th class="text-left">Date Created</th>
                        <th class="text-center text-success" colspan="3"><span class="fas fa-bars"></span> Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@sn</td>
                            <td class="text-left">
                                <a href="@item.rateID" title="Open page" target="_blank" class="text-primary">@item.rateID</a>
                            </td>
                            <td class="text-left">@item.Rate</td>
                            <td class="text-left">@item.RateType</td>
                            <td class="text-left">@item.date_created</td>
                            <td>
                                <div class="form-button-action">
                                    <button type="button" data-toggle="tooltip" title="" class="btn btn-link btn-primary btn-lg" data-original-title="Edit Task">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    <button type="button" data-toggle="tooltip" title="" class="btn btn-link btn-danger" data-original-title="Remove">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>
                            </td>
                            @* <td class="text-center">
                                <a href="@Url.Action("UpdateRate", "rate", new {id = item.rateID})" title="Edit Details" class="text-primary process-action">
                                <span class="far fa-edit"></span> Edit
                                </a>
                                </td>
                                <td class="text-center"><a href="javascript:void(0);" data-url="@Url.Action("ValuesetDetails","settings", new { id=item.Pkey })" title="Details" class="smallModalId text-info process-action"><i class="fa fa-eye"></i> view</a></td>
                                <td class="text-center">
                                <a href="javascript:void(0);" onclick="return NxtDelete('/settings/DeleteAction/' + '@item.Pkey' + '?vType=valueset', '@item.ValuesetTitle', '/settings/loadpartial/?vType=valuesets');" class="text-danger" title="Delete Item"><i class="fa fa-times-circle"></i> Delete</a>
                                </td>*@
                        </tr>
                        sn++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>